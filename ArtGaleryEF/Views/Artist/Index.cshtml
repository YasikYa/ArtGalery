@model IEnumerable<ArtGaleryEF.Models.ArtistViewModel>
@{
    ViewData["Title"] = "Index";
}

<div>
    <h1>All Artists</h1>
    <h2>@Html.ActionLink("See awailable pictures", "Index", "Home")</h2>
</div>

<p>
    @Html.ActionLink("Add new Artist", "CreateArtist", "Artist")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fame)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fame)
                </td>
                <td>
                    @Html.ActionLink("Orders", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

